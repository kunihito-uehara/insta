<p id="notice"><%= notice %></p>

<% unless @contact.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(contact_id: @contact.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<p>
  <strong>画像</strong>
  <%= image_tag(@contact.image.url) if @contact.image && @contact.image.url %>
</p>
<p>
  <strong>名前:</strong>
  <%= @contact.user.name %>
</p>

<p>
  <strong>内容:</strong>
  <%= @contact.content %>
</p>

<%= link_to '編集', edit_contact_path(@contact) %> |
<%= link_to '戻る', contacts_path %>
