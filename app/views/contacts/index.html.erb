<p id="notice"><%= notice %></p>

<h1>インスタ</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>メール</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.content %></td>
        <td><%= link_to '確認', contact %></td>
        <td><%= link_to '編集', edit_contact_path(contact) %></td>
        <td><%= link_to '削除', contact, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

